{
  "name": "CS_Study C++",
  "build": { "dockerfile": "Dockerfile" },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true
      },
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "vadimcn.vscode-lldb",
        "EditorConfig.EditorConfig"
      ]
    }
  },
  "postCreateCommand": "sudo ldconfig",
  "remoteUser": "vscode"
}
